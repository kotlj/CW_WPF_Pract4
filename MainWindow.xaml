<Window x:Class="CW_WPF_Pract4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CW_WPF_Pract4"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="1*"/>
        <RowDefinition Height="5*"/>
        <RowDefinition Height="1*"/>
        <RowDefinition Height="5*"/>
        <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="5*"/>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="5*"/>
        <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Name="Rec1"  Fill="#FFF5552A" Grid.Row="1" Grid.Column="1"/>
        <Rectangle Name="Rec2"  Fill="#FF82BC0A" Grid.Row="1" Grid.Column="3"/>
        <Rectangle Name="Rec3"  Fill="#FF0BA7ED" Grid.Row="3" Grid.Column="1"/>
        <Rectangle Name="Rec4"  Fill="#FFFEBC0A" Grid.Row="3" Grid.Column="3"/>
    </Grid>
</Window>
